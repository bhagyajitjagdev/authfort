---
interface Feature {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<div class="not-content grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 my-4">
  {features.map((feature) => (
    <div class="p-6 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-100/30 dark:bg-white/[0.03] transition-all hover:border-gray-400 dark:hover:border-gray-500">
      <div class="text-2xl mb-3 w-10 h-10 flex items-center justify-center rounded-lg bg-gray-100 dark:bg-white/[0.06]">
        {feature.icon}
      </div>
      <h3 class="text-[0.9375rem] font-semibold mb-1 text-gray-900 dark:text-gray-100">{feature.title}</h3>
      <p class="text-[0.8125rem] leading-relaxed text-gray-500 dark:text-gray-400">{feature.description}</p>
    </div>
  ))}
</div>
